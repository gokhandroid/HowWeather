    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/today_info_icon_size"
                android:layout_height="@dimen/today_info_icon_size"
                android:background="@drawable/sunrise" />

            <com.gkhnnl.howweather.util.CustomTextView
                android:id="@+id/txt_sunrise"
                style="@style/TodayInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:30"
                app:tvFontName="Roboto-Light.ttf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sunrise"
            android:layout_below="@+id/sunrise"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/today_info_icon_size"
                android:layout_height="@dimen/today_info_icon_size"
                android:background="@drawable/sunset" />

            <com.gkhnnl.howweather.util.CustomTextView
                android:id="@+id/txt_sunset"
                style="@style/TodayInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:15"
                app:tvFontName="Roboto-Light.ttf" />

        </LinearLayout>

    </RelativeLayout>

