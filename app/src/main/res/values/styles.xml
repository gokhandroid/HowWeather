<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.Search" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.Setting" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="TodayInfoText">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DailyText">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DailyDescText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="DailyDegreeText">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HourlyText">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="HourlyDescText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="HourlyDegreeText">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="LocationListText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
